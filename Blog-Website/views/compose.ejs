<%- include('partials/header'); -%>

<h1>Write a new Blog Post:</h1>
<form class="" action="/" method="post">
  <div class="form-group">
    <label for="exampleFormControlInput1">Blog Title:</label>
    <input type="text" name="newTitle"class="form-control" id="exampleFormControlInput1">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Compose Post:</label>
    <textarea class="form-control" name="newBlog" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-light">Submit Post</button>
</form>



